@{
    ViewData["Title"] = "User Registration";
}

<h2>User Registration</h2>

<form id="registerForm">
    <input type="text" id="name" placeholder="Enter Name" required />
    <input type="email" id="email" placeholder="Enter Email" required />
    <input type="password" id="password" placeholder="Enter Password" required />
    <select id="role">
        <option value="Doctor">Doctor</option>
        <option value="Admin">Admin</option>
    </select>
    <button type="submit">Register</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Index</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
        </tr>
    </thead>
    <tbody id="userTableBody">
        <!-- ✅ Users will be dynamically inserted here -->
    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        loadUsers(); // ✅ Call function when page loads

        $("#registerForm").submit(function (event) {
            event.preventDefault();

            var userData = {
                Name: $("#name").val(),
                Email: $("#email").val(),
                Password: $("#password").val(),
                Role: $("#role").val()
            };

            $.ajax({
                type: "POST",
                url: "/User/Register",
                contentType: "application/json", // ✅ Send JSON data
                data: JSON.stringify(userData),
                success: function (response) {
                    alert(response.success ? "Registration Successful!" : "Registration Failed!");
                    if (response.success) {
                        loadUsers(); // ✅ Reload users after successful registration
                        $("#registerForm")[0].reset(); // ✅ Reset form fields
                    }
                },
                error: function () {
                    alert("An error occurred while registering the user.");
                }
            });
        });

        function loadUsers() {
            $.ajax({
                type: "GET",
                url: "/User/GetUsers", // ✅ Fetch users from API
                success: function (users) {
                    var tableBody = $("#userTableBody");
                    tableBody.empty(); // ✅ Clear previous data

                    $.each(users, function (index, user) {
                        tableBody.append(`
                            <tr>
                                <td>${index + 1}</td>
                                <td>${user.name}</td>
                                <td>${user.email}</td>
                                <td>${user.role}</td>
                            </tr>
                        `);
                    });
                },
                error: function () {
                    alert("Error fetching users.");
                }
            });
        }
    });
</script>
